<nav class="subguias-nav">
  <ul>
    <li><a class="btn btn-primary" href="/admincadUsuario">Cadastrar Usuário</a></li>
  </ul>
</nav>

<section class="data-card">
  <header class="data-header">
    <h1>Gerenciar Usuários</h1>
  </header>

  <div class="table-container">
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nome</th>
          <th>Nível</th>
          <th>Email</th>
          <th>Telefones</th>
          <th>Status</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        {{#each usuarios}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.nome}}</td>
            <td>{{this.nivel}}</td>
            <td>{{this.email}}</td>
            <td>
              {{#if this.Telefones}}
                {{#each this.Telefones}}
                  <p>{{this.numero}} ({{this.tipo}})</p>
                {{/each}}
              {{else}}
                <p>Sem telefone cadastrado</p>
              {{/if}}
            </td>
            <td>{{this.status}}</td>
            <td>
              <form action="/editarNivel/{{this.id}}" method="GET" style="display:inline;">
                <button type="submit" class="btn btn-primary">Editar</button>
              </form>
              <form id="form-excluir-{{this.id}}" action="/usuario/{{this.id}}?_method=DELETE" method="POST" style="display:inline;">
                <button type="button" onclick="confirmarExclusao('{{this.id}}')" class="btn btn-danger">Excluir</button>
              </form>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>

<script>
function confirmarExclusao(id) {
  if (confirm('Realmente deseja excluir o usuário?')) {
    document.getElementById(`form-excluir-${id}`).submit();
  }
}
</script>

