<nav class="subguias-nav">
  <ul>
    <li><a class="btn btn-primary" href="/admincadObjeto">Cadastrar Objeto</a></li>
  </ul>
</nav>

<section class="data-card">
  <header class="data-header">
    <h1>Gerenciar Objetos</h1>
  </header>

  {{#if objetos.length}}
    <div class="table-container">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Usuário</th>
            <th>Recompensa</th>
            <th>Crime</th>
            <th>Cor</th>
            <th>Categoria</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          {{#each objetos}}
            <tr>
              <td>{{this.id}}</td>
              <td>{{usuario.nome}}</td>
              <td>{{this.recompensa}}</td>
              <td>{{this.crime}}</td>
              <td>{{this.cor}}</td>
              <td>{{this.categoria}}</td>
              <td>
                <div class="objeto-acoes" style="display:flex;gap:8px;flex-wrap:wrap">
                  <a class="btn btn-secondary" href="/viewObjetos/{{this.id}}">Visualizar</a>
                  <a class="btn btn-primary" href="/editarobjeto/{{this.id}}">Editar</a>
                  <form action="/excluirObjeto/{{this.id}}" method="POST" onsubmit="return confirm('Tem certeza de que deseja excluir este objeto?');" style="display:inline">
                    <button type="submit" class="btn btn-danger">Excluir</button>
                  </form>
                </div>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <p class="sem-objetos">Nenhum objeto cadastrado.</p>
  {{/if}}
</section>

