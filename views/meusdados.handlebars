<div class="container">
  <section class="data-card">
    <header class="data-header">
      <h1>Meus Dados</h1>
      <a class="btn btn-secondary" href="/editarusuario/{{usuario.id}}">Editar Dados</a>
    </header>

    <div class="data-grid">
      <div class="row"><span class="key">Nome</span><span class="value">{{usuario.nome}}</span></div>
      <div class="row"><span class="key">Email</span><span class="value">{{usuario.email}}</span></div>
      <div class="row"><span class="key">CPF</span><span class="value">{{usuario.cpf}}</span></div>
      <div class="row"><span class="key">Sexo</span><span class="value">{{usuario.sexo}}</span></div>
      <div class="row"><span class="key">Nascimento</span><span class="value">{{usuario.data_nascimento}}</span></div>
      <div class="row"><span class="key">Nível</span><span class="value">{{usuario.nivel}}</span></div>
      <div class="row"><span class="key">Status</span><span class="value">{{usuario.status}}</span></div>
    </div>

    <section class="data-section">
      <h2 class="section-title">Telefones</h2>
      {{#if usuario.Telefones.length}}
        <ul class="chip-list">
          {{#each usuario.Telefones}}
            <li class="chip">{{this.numero}} <span class="chip-meta">({{this.tipo}})</span></li>
          {{/each}}
        </ul>
      {{else}}
        <p class="muted">Nenhum telefone cadastrado.</p>
      {{/if}}
    </section>

    <section class="data-section">
      <h2 class="section-title">Endereços</h2>
      {{#if usuario.Enderecos.length}}
        <ul class="address-list">
          {{#each usuario.Enderecos}}
            <li class="address-item">
              <span><strong>Rua:</strong> {{this.rua}}</span>
              <span><strong>Número:</strong> {{this.numero}}</span>
              <span><strong>Bairro:</strong> {{this.bairro}}</span>
              <span><strong>Cidade:</strong> {{this.cidade}}</span>
              <span><strong>Estado:</strong> {{this.estado}}</span>
            </li>
          {{/each}}
        </ul>
      {{else}}
        <p class="muted">Nenhum endereço cadastrado.</p>
      {{/if}}
    </section>
  </section>
</div>

