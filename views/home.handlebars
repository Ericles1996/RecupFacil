<nav class="subguias-nav">
  <ul>
    <div class="filter-container">
      <li><a class="btn btn-primary" href="/postar">Adicionar Registro</a></li>
    </div>
    <li>
      <div class="filter-container">
        <form class="filter-form" method="GET" action="/filtro">
          <i class="fa fa-filter" aria-hidden="true"></i>
          <label for="filtro">Tipo:</label>
          <select id="filtro" name="filtro" onchange="this.form.submit()" title="Filtrar por categoria">
            <option value="" disabled {{#ifEquals selectedFiltro ""}}selected{{/ifEquals}}>Selecione uma opção</option>
            <option value="todos" {{#ifEquals selectedFiltro "todos"}}selected{{/ifEquals}}>Todos</option>
            <option value="veiculo" {{#ifEquals selectedFiltro "veiculo"}}selected{{/ifEquals}}>Veículo</option>
            <option value="eletronico" {{#ifEquals selectedFiltro "eletronico"}}selected{{/ifEquals}}>Eletrônico</option>
            <option value="outro" {{#ifEquals selectedFiltro "outro"}}selected{{/ifEquals}}>Outros</option>
          </select>
        </form>
      </div>
    </li>
  </ul>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  </nav>

<div class="todos-objetos-container">
  {{#if objetos.length}}
  <ul class="objetos-list">
    {{#each objetos}}
      <li class="objeto-item">
        <div class="imagem-container">
          {{#each this.imagens}}
            {{#if @first}}
              <img src="{{this.img1}}" alt="Imagem do Objeto" style="cursor: pointer;" onclick="exibirEmTelaCheia(this)" />
            {{/if}}
          {{/each}}
        </div>
        <h3 class="objeto-nome"><strong>Recompensa: </strong><span class="recompensa-color">{{this.recompensa}}</span></h3>
        <p class="objeto-descricao"><strong>Crime:</strong><span class="crime-color"> {{this.crime}}</span></p>
        <p class="objeto-cor"><strong>Cor:</strong> {{this.cor}}</p>
        <p class="objeto-categoria"><strong>Categoria:</strong> {{this.categoria}}</p>
        <p><a class="btn btn-secondary" href="/viewObjetos/{{this.id}}">Visualizar Objeto</a></p>
      </li>
    {{/each}}
  </ul>
  {{else}}
    <p class="sem-objetos">Não há objetos postados por usuários ainda.</p>
  {{/if}}
  {{#if pagination}}
  <nav class="pagination" aria-label="Navegação de página" style="margin-top:16px; display:flex; align-items:center; gap:12px; justify-content:center;">
    <a class="btn btn-secondary {{#unless pagination.hasPrev}}disabled{{/unless}}" href="/home?page={{pagination.prevPage}}" aria-disabled="{{#unless pagination.hasPrev}}true{{/unless}}">Anterior</a>
    <span>Página {{pagination.page}} de {{pagination.totalPages}} • {{pagination.totalItems}} itens</span>
    <a class="btn btn-secondary {{#unless pagination.hasNext}}disabled{{/unless}}" href="/home?page={{pagination.nextPage}}" aria-disabled="{{#unless pagination.hasNext}}true{{/unless}}">Próxima</a>
  </nav>
  {{/if}}
</div>



